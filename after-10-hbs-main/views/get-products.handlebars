{{#if products}}
  <h1>Listado de productos</h1>
  <p>Hay {{this.products.length}} productos</p>
  <br>
  <table class="table table-dark table-borderless">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Foto URL</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
  {{#each products}}
    <tr>
        <td>{{this.title}}</td>
        <td>$ {{this.price}}</td>
        <td><img src={{this.thumbnail}} width="80"></td>
    </tr>
  {{/each}}
    </tbody>
  </table>
{{else}}
<p>Hay {{this.products.length}} producto(s)</p>
{{/if}}
<a href="/" class="btn btn-success">Agregar producto</a>