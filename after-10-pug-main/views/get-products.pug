doctype html
html
    include includes/head.pug
    body 
        if products.length
            h1 Listado de productos
            p= "Hay " + products.length + " producto(s)"
            table.table
                thead
                    tr
                    th(scope='col') Nombre
                    th(scope='col') Precio
                    th(scope='col') Foto URL
                tbody.table-group-divider
                    each item in products
                        tr
                            td= item.title
                            td= item.price
                            td
                                img(src=item.thumbnail, width="80")
        else
            p= "Hay " + products.length + " producto(s)"
        a.btn.btn-success(href='/') Agregar producto
        include includes/foot.pug
